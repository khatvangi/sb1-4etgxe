---
import Layout from '../../layouts/Layout.astro';
import ArticleCard from '../../components/ArticleCard.astro';

const sections = [
  { title: 'Ethics', href: '/humanities/philosophy/ethics' },
  { title: 'Metaphysics', href: '/humanities/philosophy/metaphysics' },
  { title: 'Epistemology', href: '/humanities/philosophy/epistemology' },
  { title: 'Political Philosophy', href: '/humanities/philosophy/political' },
];

const articles = [
  {
    title: 'New Ethical Framework Proposed for AI Decision-Making',
    excerpt: 'Philosophers develop a comprehensive ethical framework to guide the development and deployment of artificial intelligence systems.',
    href: '/article/ai-ethics-framework',
    image: 'https://via.placeholder.com/800x400.png?text=AI+Ethics',
  },
  {
    title: 'Quantum Physics Challenges Traditional Metaphysical Concepts',
    excerpt: 'Recent advancements in quantum mechanics prompt philosophers to reconsider fundamental ideas about reality and existence.',
    href: '/article/quantum-metaphysics',
    image: 'https://via.placeholder.com/800x400.png?text=Quantum+Metaphysics',
  },
  {
    title: 'New Theory of Knowledge Integrates Eastern and Western Philosophies',
    excerpt: 'A philosopher proposes a novel epistemological framework that combines elements from both Eastern and Western philosophical traditions.',
    href: '/article/east-west-epistemology',
    image: 'https://via.placeholder.com/800x400.png?text=East+West+Philosophy',
  },
];
---

<Layout title="Philosophy - News Website">
  <h1 class="text-4xl font-bold mb-8">Philosophy</h1>
  
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
    {sections.map((section) => (
      <a href={section.href} class="bg-indigo-500 text-white p-4 rounded-lg text-center font-semibold hover:bg-indigo-600 transition-colors">
        {section.title}
      </a>
    ))}
  </div>

  <h2 class="text-2xl font-semibold mb-4">Latest in Philosophy</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {articles.map((article) => (
      <ArticleCard {...article} />
    ))}
  </div>
</Layout>